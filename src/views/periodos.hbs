<script src="/js/periodo/crud.js"></script>
<div class="container p-4">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Descripcion</th>
                <th scope="col">Fecha Inicio</th>
                <th scope="col">Fecha Fin</th>
                <th scope="col" class="text-right">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each periodos}}
            <tr>
                <td scope="row">{{descripcion}}</td>
                <td>{{momentjs fechaInicio 'LL'}}</td>
                <td>{{momentjs fechafin 'LL'}}</td>
                <td class="text-right"><a data-id='{{id}}' class="btn btn-danger text-white botonEliminar">Eliminar</a>
                    <a id="" data-id='{{id}}' class="btn btn-secondary text-white botonEditar">Editar</a></td>
            </tr>
            {{else}}
            <tr>
                <th colspan="4">No existen preguntas </th>
            </tr>
            {{/each}}
            <tr>
                <th colspan="3"></th>
                <th class="text-right"><a class="btn btn-primary text-white" id="btnNuevo">Nuevo</a></th>
            </tr>
        </tbody>
    </table>
</div>

{{> periodo/modal}}