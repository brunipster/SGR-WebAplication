<div class="container p-4">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Descripcion</th>
                <th scope="col" class="text-center">Cantidad Respuestas</th>
                <th scope="col">Periodo</th>
                <th scope="col" class="text-right">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each preguntas}}
            <tr>
                <th scope="row">{{descripcion}}</th>
                <td class="text-center">{{cantidadRespuestas}}</td>
                <td>{{periodo}}</td>
                <td class="text-right"><a href="/preguntas/eliminar/{{id}}" class="btn btn-danger">Eliminar</a>
                    <a href="/preguntas/editar/{{id}}" class="btn btn-secondary">Editar</a></td>
            </tr>
            {{else}}
            <tr>
                <th colspan="4">No existen preguntas </th>
            </tr>
            {{/each}}
            <tr>
                <th colspan="3"></th>
                <th class="text-right"><a href="/preguntas/crear" class="btn btn-primary">Nuevo</a></th>
            </tr>
        </tbody>
    </table>
</div>