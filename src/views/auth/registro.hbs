<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Registro</h3>
                </div>
                <div class="card-body">
                    <form action="/registro" method="POST">
                        <div class="form-group">
                            <input type="text" placeholder="Nombre de Entidad" id="inputNombreEntidad"
                                name="nombreEntidad" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="rol" id="selectRol">
                                <option value="">Usuario</option>
                                <option value="">Administrador</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="nivelGobierno" id="selectNivelesGobierno">
                                {{#each niveles}}
                                <option value="{{id}}">{{descripcion}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" name="username" placeholder="Usuario" id="inputUsuario"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Password" id="inputPassword"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block btnRegistro">
                                Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
